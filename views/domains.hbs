{{ userMessage }}

<form method="post" action="/admin/domains">
  <div class="form-row" style="padding: 30px 0;">
    <div class="col-sm-4">
      <input type="text" class="form-control" id="domain" name="domain" placeholder="e.g. example.com">
    </div>
    <div class="col-sm-1">
      <button type="submit" class="btn btn-primary" name="action" value="add">Add Domain</button>
    </div>
  </div>
</form>

<form method="post" action="/admin/domains">
  <button class="btn btn-danger" name="action" type="submit" value="delete" style="margin: 20px;">Delete Domains(s)</button>
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Select</th>
      <th scope="col">Domain</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each domains }}
    <tr>
      <td><input type="checkbox" name="id[]" value="{{this.id}}"></td>
      <td>{{this.domain}}</td>
      <td><a href="/admin/dkim?id={{this.id}}">Download DKIM record</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</form>
