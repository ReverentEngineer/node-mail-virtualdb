{{ userMessage }}

<form method="post" action="/admin/users">
  <div class="form-row" style="padding: 30px 0;">
    <div class="col-sm-3">
      <input type="text" class="form-control" id="new_username" name="new_username" placeholder="e.g. bob">
    </div>
    <div class="col-sm-3">
      <input type="password" class="form-control" id="new_password" name="new_password" placeholder="Password">
    </div>
 
    <div class="col-sm-1">
      <button type="submit" class="btn btn-primary" name="action" value="add">Add User</button>
    </div>
  </div>
</form>

<form method="post" action="/admin/users">
  <button class="btn btn-danger" name="action" type="submit" value="delete" style="margin: 20px;">Delete User(s)</button>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Select</th>
        <th scope="col">Username</th>
      </tr>
    </thead>
    <tbody>
      {{#each users }}
      <tr>
        <td><input type="checkbox" name="id[]" value="{{this.id}}"></td>
        <td>{{this.username}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</form>
